.use-motion .sidebar .motion-element { opacity: 1; }

.sidebar {
  margin: 0;
  background: #fff;
  border-radius: 5px;

  // Do NOT delete this line
  // or Affix (position: fixed) will not work in Google Chrome.
  -webkit-transform: none;
}


.sidebar-inner {
  margin: 0 auto;
  max-width: 300px;
  padding: 20px;
  box-sizing: border-box;
  width: 100%;
  color: $text-color;
  background: $element_background;
  box-shadow: $box-shadow;
  border-radius: $border-radius;
  border-radius: 5px;
  z-index: 2;
  if (hexo-config('motion.enable') and hexo-config('motion.transition.sidebar')) { opacity: 0; }

  &.affix {
    position: fixed;
    top: $sidebar-offset;
    width: 23%;
  }

  &.affix-bottom {
    position: absolute;
    width: 23%;
  }

  &.affix-top {
    position: absolute;
    width: 23%;
  }
}

.site-overview {
  margin: 0 2px;
  text-align: left;
}

.site-author {
  clearfix();
  position: relative;
}

.site-author-image {
  width: $site-author-image-width;
  height: $site-author-image-height;
  border-radius: $site-author-image-width;
  border: none;
  padding: 0;
}

.site-author-name {
  font-size: 20px;
  font-weight: 700;
  width: 130px;
}

.site-description {
  font-size: 14px;
  margin: 5px 0 8px;
  font-weight: 700;
  color: #555;
}

.sidebar a {
  color: $black-light;

  &:hover { color: $black-deep; }
}

.site-state-item {
  padding: 0 10px;
}

.links-of-author-item {
  a:before { display: none; }
  a {
    border-bottom: none;
    text-decoration: underline;
  }
}

.feed-link {
  text-align: center;
  margin: 10px 0 10px;
}

.feed-link a {
  display: block;
  color: $orange;
  border: none;

  &:hover {
    background: none;
    color: darken($orange, 20%);

    i { color: darken($orange, 20%); }
  }
}

.links-of-author {
  //clearfix();
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 0 0 20px;
}
.links-of-author-item {
  sidebar-inline-links-item();

  a {
    display: block;
    text-decoration: none;
    overflow: visible;

    &:hover {
      .fa {
        background: $main-color;
        color: #fff;
      }
    }
  }

  .fa {
    font-size: 24px;
    display: inline-block;
    width: 42px;
    height: 42px;
    line-height: 42px;
    border-radius: 42px;
    color: rgba(0,0,0,.5);
    background-color: rgba(0,0,0,.1);
    transition: all .3s ease-in-out;
    font-style: normal;
  }
  .fa-globe { font-size: 15px; }
}


.links-of-blogroll {
  text-align: center;
  margin-top: 20px;
  padding: 3px 0 0;
  border-top: 1px dotted $grey-light;
}
.links-of-blogroll-title { margin-top: 0; }
.links-of-blogroll-item { padding: 0; }
.links-of-blogroll-inline {
  clearfix();

  .links-of-blogroll-item {
    sidebar-inline-links-item();
    display: inline-block;
    if !hexo-config('social_icons.icons_only') { width: unset; }
  }
}

.fa-more:before {
    content: "∙∙∙";
}

