.category-all-page {
  .category-all-title {
  	text-align: center;
  	display: none;
  }

  .category-all { margin-top: 20px; }

  .category-list {
    margin: 0;
    list-style: none;
  }

  .category-list-item {
    margin: 5px 10px;
	display: inline;
  }

  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }

  .category-list-child { padding-left: 10px; }
}
