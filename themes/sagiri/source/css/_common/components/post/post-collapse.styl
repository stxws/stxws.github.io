@media (max-width: 767px) {
  .posts-collapse {
    margin: 0 20px;

    .post-title, .post-meta {
      display: block;
      width: auto;
      text-align: left;
    }
  }
}

.tag .collection-contain,
.category .collection-contain,
.posts-collapse .collection-contain{
  position: relative;
  z-index: $zindex-1;

  &::after {
    content: " ";
    position: absolute;
    top: 75px;
    bottom: 12px;
    left: 0;
    margin-left: -2px;
    width: 4px;
    background: rgba(151, 223, 253, .1);
    z-index: $zindex-bottom;
  }

  margin-left: $posts-collapse-left;
  +mobile() { margin: 0 20px; }

  .collection-title {
    position: relative;
    margin: 30px 0;
    small { color: $grey; margin-left: 5px; }
  }

  .post-header {
    position: relative;
    the-transition();
    transition-property: border;
	margin-bottom: 0px;

    &::before {
      content: " ";
      position: absolute;
      left: 0;
      top: 12px;
      width: 6px;
      height: 6px;
      margin-left: -4px;
      background: $main-color;
      circle();
      border: 1px solid white;
      the-transition();
      transition-property: background;
    }
  }

  .post-meta {
    position: absolute;
    font-size: 12px;
    left: 20px;
    top: 5px;
	.post-time {
		color: #00a7e0;
	}
  }

  .post-comments-count { display: none; }

  .post-title {
    margin-left: 60px;
    font-size: 14px;
    font-weight: normal;
    line-height: inherit;

    &::after {
      margin-left: 3px;
      opacity: 0.6;
    }

    a {
      color: $grey-dim;
      border-bottom: none;
    }
  }
}
